/* HACN */

.hacn-page-section {
  margin: 14rpx;
  padding: 28rpx 14rpx;
  background: white;
  border-radius: 4rpx;
}

.real-time-news {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 14rpx;
  margin: 14rpx;
  height: 48rpx;
  background: rgba(26, 182, 84, 1);
  border-radius: 8rpx;
  font-size: 18rpx;
  color: white;
  overflow: hidden;
}

.swiper{
  flex: auto;
  height: 48rpx;
}

.swiper-item {
  height: 48rpx;
  line-height: 48rpx;
}

.real-time-news .icon-more {
  width: 18rpx;
  height: 18rpx;
  margin-left: 12rpx;
}

.desc-and-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 14rpx;
  margin-bottom: 24rpx;
}

.office-area {
  margin-left: 14rpx;
  font-size: 28rpx;
}

.office-desc {
  font-size: 20rpx;
  margin-bottom: 0;
}

.label-color-tip {
  width: 14rpx;
  height: 14rpx;
  margin-left: 18rpx;
  margin-right: 6rpx;
}

.label-text {
  font-size: 14rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.branch-label {
  display: flex;
  align-items: center;
}

.branch-label view {
  margin-right: 8rpx;
  height: 14rpx;
  width: 14rpx;
  border-radius: 14rpx;
  background: #1ab654;
}

.branch-label text {
  font-size: 14rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.branch-situaction-row {
  border-bottom: 4rpx #f0f0f0 solid;
  display: flex;
}

.branch-situaction {
  box-sizing: border-box;
  padding-left: 28rpx;
  padding-right: 20rpx;
  width: 33.3%;
  height: 100rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.branch-situaction > view {
  display: flex;
  flex-direction: column;
}

.branch-situaction > view:nth-of-type(1) {
  color: #333;
}

.branch-situaction .death-num {
  color: #333;
}

.branch-situaction .suspect-num {
  color: #ffc525;
}

.branch-situaction .confirm-num {
  color: #f26478;
}

.isolation {
  margin: 14rpx;
  height: 190rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
}

.isolation .divi {
  width: 5rpx;
  height: 60rpx;
  background: rgba(240, 240, 240, 1);
}

.isolation .active, .isolation .passive {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.isolation .active text:nth-of-type(1), .isolation .passive text:nth-of-type(1) {
  font-size: 28rpx;
  line-height: 1;
  color: #333;
}

